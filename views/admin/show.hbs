<div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">

                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0" style="height: 300px;">
                <table class="table table-head-fixed">
                  <thead>
                    <tr>
                      <th>Item_name</th>
                      <th>Model</th>
                      <th>Price</th>
                      <th>myImage</th>
                      <th>Description</th>
                      <th>Status</th>
                    </tr>
                  </thead>
                  <tbody>
                     {{#each result}}
                      <tr>
                        <td>{{item_name}}</td>
                        <td>{{model}}</td>
                        <td>{{price}}</td>
                        <td>{{image_dir}}</td>
                        <td>{{description}}</td>
                        <td><input type="checkbox" id='status{{id}}' {{isActive status}} class='statusCheckbox' name='status{{status}}' value="true"></td>
                        
                      </tr>
                     {{/each}}
                   
                    
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div> 

        <script>
         $('.statusCheckbox').change(function (e) {
           var name=e.target.name;
           var staus_id=e.target.id;
          var id = staus_id.slice(-1)
          console.log(id)
           var status = document.querySelector('#'+staus_id).checked;
           console.log(status)
           $.ajax({url: "/show/updateStatus", data:{name:name,id:id, status:status},method:'Post',
                        success: function(result) { 
                   if(result['success']){  
                     alert(result['message']);
                   
                   }else{
                     alert(result['message'])
                   }
                }}); 
 });
        </script>
